<% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Edit your Listing</h3>
            <br>
            <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" class="needs-validation" novalidate enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title:</label>
                    <input name="listing[title]" id="title" value="<%= listing.title%>" type="text" class="form-control"
                        required>

                    <div class="invalid-feedback">Title should be valid</div>

                </div>
                <!-- <input name="listing[title]" placeholder="Enter title" type="text" value="<%= listing.title%>"> -->
                <div class="mb-3">
                    <label for="description" class="for-label">Description:</label>
                    <textarea name="listing[description]" type="text" class="form-control" id="description"
                        value="<%= listing.description%>" required><%= listing.description %></textarea>
                    <div class="invalid-feedback">Description should be valid</div>

                </div>
                <!-- <textarea name="listing[description]" placeholder="Enter description" type="text" value="<%= listing.description%>"><%= listing.description %></textarea> -->
                
                <div class="mb-3">
                    
                    <img src="<%= originalImageUrl  %>">
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Upload Image:</label>
                    <input id="image" name="listing[image]" class="form-control"
                        type="file">
                    <!-- <div class="invalid-feedback">Image required</div> -->
                </div>


                <!-- <input name="listing[image][url]" placeholder="Enter image URL/link" type="text" value="<%= listing.image.url%>"> -->
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price:</label>
                        <input id="price" required name="listing[price]" value="<%= listing.price%>"
                            class="form-control" placeholder="1200">
                    <div class="invalid-feedback">price should be valid</div>
                        
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country:</label>
                        <input id="country" required name="listing[country]" class="form-control"
                            value="<%= listing.country%>" placeholder="India" type="text">
                    <div class="invalid-feedback">Country name should be valid</div>

                    </div>
                </div>
                <!-- <input name="listing[price]" placeholder="Enter price" type="number" value="<%= listing.price%>"> -->

                <!-- <input name="listing[country]" placeholder="Enter Country" type="text" value="<%= listing.country%>"> -->
                <div class="mb-3">
                    <label for="location" class="form-label">Location:</label>
                    <input id="location" required name="listing[location]" class="form-control"
                        value="<%= listing.location%>" placeholder="Jaipur, Rajasthan" type="text">
                        <div class="invalid-feedback">Location should be valid</div>
                    
                </div>
                <!-- <input name="listing[location]" placeholder="Enter location" type="text" value="<%= listing.location%>"> -->

                <button class="btn btn-dark edit-btn mt-3">Edit</button>
                <br><br>
            </form>
        </div>
    </div>
